@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="card text-center p-3">
    <table class="table table-striped table-bordered" id="rankingTable">
        <thead>
            <tr>
                <th width="10%">Position</th>
                <th width="30%">Name</th>
                <th width="30%">Surname</th>
                <th width="30%">Score</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var rank in Model.Ranking)
        {
            <tr>
                <td>@rank.Position</td>
                <td>@rank.Name</td>
                <td>@rank.Surname</td>
                <td>@rank.Score</td>
            </tr>
        }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            initTable();
        });

        function initTable() {
            $('#rankingTable').DataTable({
                lengthMenu: [[10, 25, 50, 100, -1], [10, 25, 50, 100, 'All']],
                paging: true,
                filter: true
            });
        }
    </script>
}